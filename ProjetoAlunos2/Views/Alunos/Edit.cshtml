@model ProjetoAlunos2.Models.ViewModels.FormularioAlunoViewModel;

@{
    ViewData["Title"] = "Editar informações do aluno";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h4>Aluno</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Aluno.Id" />
            <div class="form-group">
                <label asp-for="Aluno.Nome" class="control-label"></label>
                <input asp-for="Aluno.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Aluno.Sobrenome" class="control-label"></label>
                <input asp-for="Aluno.Sobrenome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Aluno.DataDeNascimento" class="control-label"></label>
                <input asp-for="Aluno.DataDeNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Aluno.Email" class="control-label"></label>
                <input asp-for="Aluno.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Aluno.TurmaId" class="control-label">Disciplina</label>
                <select asp-for="Aluno.TurmaId" asp-items="@(new SelectList(Model.Turmas,"Id","Disciplina"))" class="form-control"></select>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning" />
                <br /><br />
                <a asp-action="Index" class="btn btn-info"> Voltar </a>
            </div>
        </form>
    </div>
</div>

@*código para rodar validação direto no cliente por JavaScript*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}